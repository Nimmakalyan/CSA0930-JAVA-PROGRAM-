public class PowerFunction {
    public static double myPow(double x, int n) {
        if (n == 0) {
            return 1.0;
        }
        
        if (n < 0) {
            x = 1 / x;
            n = -n;
        }
        
        double result = 1;
        while (n > 0) {
            if (n % 2 == 1) {
                result *= x;
            }
            x *= x;
            n /= 2;
        }
        
        return result;
    }

    public static void main(String[] args) {
        double x = 2.00000;
        int n = 10;
        System.out.println("Output: " + myPow(x, n));
    }
}M-37.x raised power n
